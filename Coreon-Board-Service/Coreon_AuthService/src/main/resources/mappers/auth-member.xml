<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coreon.auth.mapper.AuthMemberMapper">

    <!-- 회원 정보 매핑 -->
    <resultMap type="com.coreon.auth.dto.RegistDTO" id="dbQuiz">
        <id column="id" property="id"/>
        <result column="pw" property="pw"/>
        <result column="username" property="username"/>
        <result column="mobile" property="mobile"/>
        <result column="email" property="email"/>
        <result column="dept" property="dept"/>
        <result column="position" property="position"/>
    </resultMap>

    <!-- 회원 등록 -->
    <insert id="registProc" parameterType="com.coreon.auth.dto.RegistDTO">
        INSERT INTO member (id, pw, username, mobile, email, dept, position)
        VALUES (#{id}, #{pw}, #{username}, #{mobile}, #{email}, #{dept}, #{position})
    </insert>
    

    <!-- 로그인 -->
    <select id="login" parameterType="string" resultMap="dbQuiz">
        SELECT * FROM member WHERE id = #{id}
    </select>

</mapper>
